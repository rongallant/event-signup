

mixin activity(activity)
    .item
        .ui.image
             i.orange.compass.icon.big
        .top.aligned.content
            .meta.ui.right.floated
                div.
                    #{moment(activity.startDateTime).format('h:MM a')}
                    -
                    #{moment(activity.startDateTime).add(activity.duration, 'hours').format('h:MM a')}
            .header= activity.name
            .content
                p= activity.description
                .extra


mixin task(activity)
    .item
        .ui.image
            i.yellow.heart.icon.big
        .top.aligned.content
            .meta.ui.right.floated
                div.
                    #{moment(activity.startDateTime).format('h:MM a')}
                    -
                    #{moment(activity.startDateTime).add(activity.duration, 'hours').format('h:MM a')}
            .header= activity.name
            .content
                p= activity.description
                .extra


mixin meal(activity)
    .item
        .ui.image
            i.green.food.icon.big
        .top.aligned.content
            .meta.ui.right.floated
                div.
                    #{moment(activity.startDateTime).format('h:MM a')}
                    -
                    #{moment(activity.startDateTime).add(activity.duration, 'hours').format('h:MM a')}
            .header= activity.name
            .content
                p= activity.description
                .extra
                    .ui.right.floated.toggle.checkbox
                        input(type='checkbox', name='public')
                        label(for='public') Going



.ui.relaxed.divided.items

    each item, i in data

        if item.activity == 'task'
            + task(item)

        if item.activity == 'meal'
            + meal(item)

        if item.activity == 'activity'
            + activity(item)
