include ../parts/formElements

extends ../layout

append stylesheets
    style.
        #signup .ui.segment {
            width: 600px;
        }

append javascripts
    script.
        $(function(){
            var validationRules = {
                username: {rules:[{type:'empty'}, {type:'maxLength[35]'}]},
                password: {rules:[{type:'empty'}, {type:'maxLength[35]'}]}
            }

            var $form =  $('form[name=mainForm]')

            // CREATE / SAVE
            $form.form({
                fields: validationRules,
                inline : false,
                onSuccess: function(event, fields){
                    $.ajax({
                        type: '#{formMethod}',
                        data: fields,
                        url: '#{formAction}',
                        dataType: 'JSON',
                        statusCode: {
                            200: function(data, textStatus, jqXHR) {
                                console.log(textStatus)
                                console.log(data)
                                console.log('200 Success')
                                $.get('/message/success/Saved successfully')
                            }
                        }
                    })
                    .error(function(response) {
                        toaster('error', 'Error: ' + JSON.parse(response.responseText).error)
                    })
                    .done(function(response) {
                        location.replace('#{formSuccess}')
                    })
                    return false
                }
            })
        })

append frontContent

    .ui.text.container

        form.ui.form(name='mainForm')

            .ui.segment

                h2.ui.center.aligned.header Login

                div(style='display: none;')
                    input#PreventChromeAutocomplete(type='text', name='PreventChromeAutocomplete', autocomplete='address-level4')

                .ui.very.relaxed.stackable.grid

                    .eight.wide.column
                        .field
                            label(for='username') Username
                            .ui.left.icon.input
                                input(type='text', name="username", id="username")
                                i.user.icon

                        .field
                            label(for='password') Password
                            .ui.left.icon.input
                                input(type='password', name="password", id="password")
                                i.lock.icon

                        .field
                            .ui.submit.button
                              | Log In

                    .ui.vertical.divider
                        | Or

                    .eight.wide.column
                        .field
                            label &nbsp;
                            a.fluid.ui.facebook.button(href=pageAccountHome)
                              i.facebook.icon
                              | Login with Facebook

                        .field
                            label &nbsp;
                            a.fluid.ui.google.plus.button(href=pageAccountHome)
                              i.google.plus.icon
                              | Login with Google Plus


            +messageContainer
