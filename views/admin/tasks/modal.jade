include ../includes/formElements
include ../../mixins/personSelector
include ../../mixins/selector
include ../../mixins/scheduleDatesSelector

input(type='hidden', name="isNew", id="isNew", value=isNew)
input(type='hidden', name="id", id="id", value=data.id)
input(type='hidden', name="_event", id="_event", value=data._event)

.field.required
    label(for='name') Task Name
    input(type='text', name='name', id='name', value=data.name)

.field
    label(for='description') Task Description
    +textareaEditor('description', 'taskDescription', '2000')
        = data.description

.field.required
    label(for="location") Meetup Location
    input(type='text', name="location", id="location", value=data.location, placeholder='Location')

.fields

    .field.eight.wide.required
        label(for="effort") Effort
        select.ui.search.dropdown(name="effort", id="effort")
            option Select
            option(value=1) Easy
            option(value=2) Moderate
            option(value=3) Difficult
            option(value=4) Something
            option(value=5) Heavy Lifting

    .field.eight.wide.required
        label(for="personsRequired") Persons Required
        select.ui.search.dropdown(name="personsRequired", id="personsRequired")
            option Select
            option(value=1) 1
            option(value=2) 2
            option(value=3) 3
            option(value=4) 4
            option(value=5) 5+

.fields

    .field.ten.wide.required
        label(for="startDateTime") Start Date
        input(type="datetime-local", name="startDateTime", id="startDateTime", value=moment(data.startDateTime).format('YYYY-MM-DDTHH:mm'))

    .field.six.wide.required
        label(for="duration") Duration
        .ui.right.labeled.input
            input(type='number', name="duration", id="duration", value=data.duration, placeholder='Duration')
            .ui.basic.label Hours

.field.required
    label(for='_contact') Main Contact
    +personSelector('_contact', '_contact', data._contact)
