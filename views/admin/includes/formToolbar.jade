mixin formToolbar

    #toolbar.ui.menu.container

        a.item.launch.medium.icon.show-mobile
            i.content.icon

        .hide-mobile.item
            -var subBtn = formMode == 'edit' ? 'Update' : 'Save'
            a.ui.primary.submit.medium.button(title=subBtn)
                i.checkmark.icon
                = subBtn

        a.show-mobile.ui.primary.submit.medium.item.green(title=subBtn)
            = subBtn

        a.hide-mobile.item.ui.secondary.reset
            | Reset

        .show-mobile.item.ui.secondary.reset
            | Reset

        .right.menu

            if formMode != 'edit'

                a.item(href=listAction, title='Back to list')
                    i.list.icon
                    | Back to list

            else

                .ui.dropdown.link.item.icon
                    | &nbsp;&nbsp;
                    i.ellipsis.vertical.icon
                    | &nbsp;&nbsp;

                    .menu

                        .header Actions

                        a.item(href=createAction, title='New')
                            i.plus.icon
                            | New

                        a.item.delete.button.medium(href="#", title='Delete')
                            i.trash.outline.icon
                            | Delete now...

                        .ui.small.basic.delete.modal.center
                            .header
                                | Delete
                            .description
                                | Are you sure you want to delete this item?
                            .actions
                                .ui.negative.button
                                    | Cancel
                                .ui.positive.labeled.icon.button
                                    i.checkmark.icon
                                    | Delete Now

                        a.item(href=listAction, title='Back to list')
                            i.list.icon
                            | Back to list
