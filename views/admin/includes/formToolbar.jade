mixin formToolbar
    .ui.icon.menu
        .header.item
            = title

        a.item(href=listAction)
            i.long.arrow.left.icon
            | &nbsp Back to list

        if formMode == 'edit'
            a.item.delete.button
                i.trash.outline.icon
                | Delete
            .ui.small.basic.delete.modal.center
                .header
                    | Delete
                .description
                    | Are you sure you want to delete this item?
                .actions
                    .ui.negative.button
                        | Cancel
                    .ui.positive.labeled.icon.button
                        i.checkmark.icon
                        | Delete Now

        .right.menu

            .item
                .ui.secondary.reset.button
                    | Reset

            .item
                .ui.primary.submit.button
                    case formMode
                        when 'edit': | Update
                        default: | Save
