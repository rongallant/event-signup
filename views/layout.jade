//- ROOT LAYOUT
doctype html
html
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            meta(name='viewport', content='width=device-width, initial-scale=1')

            title #{title} | #{locals.apptitle}
            meta(name='description', content='')

            //- Add to homescreen for Chrome on Android
            meta(name='mobile-web-app-capable', content='yes')
            link(rel='icon', sizes='192x192', href='images/android-desktop.png')

            //- Add to homescreen for Safari on iOS
            meta(name='apple-mobile-web-app-capable', content='yes')
            meta(name='apple-mobile-web-app-status-bar-style', content='black')
            // meta(name='apple-mobile-web-app-title', content='Material Design Lite')
            link(rel='apple-touch-icon-precomposed', href='images/ios-desktop.png')

            //- Tile icon for Win8 (144x144 + tile color)
            meta(name='msapplication-TileImage', content='images/touch/ms-touch-icon-144x144-precomposed.png')
            meta(name='msapplication-TileColor', content='#3372DF')
            link(rel='shortcut icon', href='images/favicon.png')

        link(rel='stylesheet', href='/semantic/dist/semantic.min.css')
        block stylesheets
        link(rel='stylesheet', href='/stylesheets/style.css')

    body.pushable
        block header
        block content
        block footer
        block javascripts
            script(src="/javascripts/jquery.min.js")
            script(src="/semantic/dist/semantic.min.js")
            script(src="/noty/js/noty/packaged/jquery.noty.packaged.min.js")
            script(src="/javascripts/javascripts.js")

        //- Message Handling
        if error && error.length > 0
            script $(function(){toaster('error', '#{error}')})
        if success && success.length > 0
            script $(function(){toaster('success', '#{success}')})
        if info && info.length > 0
            script  $(function(){toaster('info', '#{info}')})
